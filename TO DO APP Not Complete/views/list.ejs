<%- include("layouts/header") %>

<div class="max-w-2xl mx-auto p-6 bg-white rounded-lg shadow-md mt-10">
  <h1 class="text-3xl font-bold text-center mb-6">Your List</h1>

  <% if (tasks && tasks.length) { %>
  <ul class="space-y-4">
    <% tasks.forEach(task => { %>
    <li class="border p-4 rounded-lg shadow-md">
      <h2 class="text-xl font-bold"><%= task.title %></h2>
      <p class="text-gray-600"><%= task.body %></p>
    </li>
    <% }) %>
  </ul>
  <% } else { %>
  <p class="text-center text-gray-500">No tasks found.</p>
  <% } %>
</div>
